# DigiPal Environment Configuration
# Copy this file to .env and customize for your deployment

# Environment (development, testing, production)
DIGIPAL_ENV=development

# Database Configuration
DIGIPAL_DB_PATH=digipal.db

# Gradio Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# Logging Configuration
DIGIPAL_LOG_LEVEL=INFO
DIGIPAL_LOG_FILE=logs/digipal.log

# Security Configuration
DIGIPAL_SECRET_KEY=your-secret-key-here

# AI Model Configuration
QWEN_MODEL=Qwen/Qwen3-0.6B
KYUTAI_MODEL=kyutai/stt-2.6b-en_fr-trfs
FLUX_MODEL=black-forest-labs/FLUX.1-dev

# HuggingFace Configuration
HF_TOKEN=your-huggingface-token-here

# MCP Server Configuration
MCP_ENABLED=true
MCP_HOST=localhost
MCP_PORT=8080

# Performance Configuration
CACHE_SIZE_MB=512
MAX_CONCURRENT_USERS=100

# Monitoring (optional)
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090